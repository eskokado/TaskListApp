<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Favor cadastrar</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: "form") do |f| %>
            <div class="form-group <%= 'has-error' if resource.errors[:username].present? %>">
              <%= f.text_field :username, class: 'form-control', placeholder: "Username", autofocus: true %>
              <% if resource.errors[:username].present? %>
                <span class="help-block"><%= resource.errors[:username].first %></span>
              <% end %>
            </div>
            <div class="form-group <%= 'has-error' if resource.errors[:email].present? %>">
              <%= f.email_field :email, class: 'form-control', placeholder: "e-mail", autofocus: true, autocomplete: "email" %>
              <% if resource.errors[:email].present? %>
                <span class="help-block"><%= resource.errors[:email].first %></span>
              <% end %>
            </div>
            <div class="form-group <%= 'has-error' if resource.errors[:password].present? %>">
              <%= f.password_field :password, class: 'form-control', placeholder: "password", autocomplete: "new--password" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <% if resource.errors[:password].present? %>
                <span class="help-block"><%= resource.errors[:password].first %></span>
              <% end %>
            </div>
            <div class="form-group <%= 'has-error' if resource.errors[:password_confirmation].present? %>">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "new password", autocomplete: "new--password" %>
              <% if resource.errors[:password_confirmation].present? %>
                <span class="help-block"><%= resource.errors[:password_confirmation].first %></span>
              <% end %>
            </div>
            <!-- Change this to a button or input when using this as a form -->
            <div class="actions">
              <%= f.submit "Registrar", class: "btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
