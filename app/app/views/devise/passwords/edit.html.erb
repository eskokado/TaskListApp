<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Alterar sua senha</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, role: "form") do |f| %>
            <%= f.hidden_field :reset_password_token %>
            <div class="form-group <%= 'has-error' if resource.errors[:password].present? %>">
              <%= f.password_field :password, class: 'form-control', placeholder: 'nova senha', autofocus: true, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <% if resource.errors[:password].present? %>
                <span class="help-block"><%= resource.errors[:password].first %></span>
              <% end %>
            </div>
            <div class="form-group <%= 'has-error' if resource.errors[:password_confirmation].present? %>">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirme nova senha', autofocus: true, autocomplete: "new-password" %>
              <% if resource.errors[:password_confirmation].present? %>
                <span class="help-block"><%= resource.errors[:password_confirmation].first %></span>
              <% end %>
            </div>
            <!-- Change this to a button or input when using this as a form -->
            <div class="actions">
              <%= f.submit "Alterar minha senha", class: "btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
