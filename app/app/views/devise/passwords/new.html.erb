<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Esqueceu sua senha?</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), role: "form", html: { method: :post }) do |f| %>
            <div class="form-group <%= 'has-error' if resource.errors[:email].present? %>">
              <%= f.email_field :email, class: 'form-control', placeholder: "e-mail", autofocus: true, autocomplete: "email" %>
              <% if resource.errors[:email].present? %>
                <span class="help-block"><%= resource.errors[:email].first %></span>
              <% end %>
            </div>
            <!-- Change this to a button or input when using this as a form -->
            <div class="actions">
              <%= f.submit "Envie-me instruções", class: "btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>