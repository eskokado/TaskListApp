<!-- app/views/backoffice/task_lists/_task_fields.html.erb -->
<div class="nested-fields" data-new-record="<%= form.object.new_record? %>">
  <%= form.input :name, label: "Task Name" %>
  <%= form.input :status, collection: Task.statuses.keys.map { |w| [w.humanize, w] }, include_blank: false %>
  <%= form.hidden_field :_destroy %>
  <%= link_to "Remove task", "#", class: "btn btn-danger", data: { action: "task-list#removeTask" } %>
</div>
