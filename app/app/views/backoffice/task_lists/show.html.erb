<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h1 class="h3"><%= @task_list.name %></h1>
      <div class="d-flex align-content-center justify-content-between">
        <%= link_to 'Editar Lista', edit_backoffice_task_list_path(@task_list), class: "btn btn-warning btn-sm" %>
        <%= link_to 'Voltar', backoffice_task_lists_path, class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h2 class="h4">Tarefas (<%= @task_list.tasks.pending.count %> pendentes) </h2>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Nome</th>
          <th>Status</th>
          <th>AÃ§Ãµes</th>
        </tr>
        </thead>
        <tbody>
        <% @task_list.tasks.each do |task| %>
          <tr>
            <td>
              <%= task.name %>
            </td>
            <td>
              <%= task.status %>
            </td>
            <td>
              <%= link_to 'Editar', backoffice_task_list_task_path(@task_list, task), class: "btn btn-primary btn-sm" %>
              <%= link_to 'Deletar', backoffice_task_list_task_path(@task_list, task), method: :delete, data: { confirm: "Tem certeza de deletar tarefa \"#{task.name}?\"" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
