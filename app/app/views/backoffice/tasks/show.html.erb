<h1><%= t('backoffice.tasks.show.title') %></h1>
<h3><%= @task_list.name %></h3>
<p><strong><%= t('backoffice.tasks.show.name') %>:</strong> <%= @task.name %></p>
<p><strong><%= t('backoffice.tasks.show.status') %>:</strong> <%= @task.status %></p>

<%= render partial: 'carousel_task_files' %>

<br/>
<br/>
<div>
  <% if @task_list.user == current_user %>
    <%= link_to t('backoffice.tasks.show.edit'), edit_backoffice_task_list_task_path(@task_list, @task), class: "btn btn-warning" %>
  <% end %>
  <%= link_to t('backoffice.tasks.show.back'), backoffice_task_list_path(@task_list), class: "btn btn-info" %>
</div>

